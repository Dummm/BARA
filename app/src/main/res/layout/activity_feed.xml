<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Feed">

    <Button
        android:id="@+id/go_to_create_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_post"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        />
    <Button
        android:id="@+id/logout_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:layout_toRightOf="@+id/go_to_create_post"
        android:layout_marginLeft="16dp"
        />
    <Button
        android:id="@+id/go_to_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:layout_toLeftOf="@+id/go_to_create_post"
        android:layout_marginLeft="16dp"
        />

    <ProgressBar
        android:id="@+id/progress_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/go_to_create_post"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>